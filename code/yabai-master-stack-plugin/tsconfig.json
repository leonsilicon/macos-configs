{
	"extends": "@leonzalion/configs/tsconfig/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"noUncheckedIndexedAccess": false,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./src/*"
			]
		},
		"lib": [
			"esnext"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}
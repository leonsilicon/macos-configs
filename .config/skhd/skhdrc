# super + j: focus down
cmd + ctrl + alt - j : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-down-window

# super + k: focus up
cmd + ctrl + alt - k : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-up-window

# super + m: focus on master
cmd + ctrl + alt - m : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-master-window

# super + shift + m: move window to master
cmd + ctrl + alt + shift - m : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp move-window-to-master

# super + i: increase number of master windows
cmd + ctrl + alt - i : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp increase-master-window-count

# super + d: decrease number of master windows
cmd + ctrl + alt - d : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp decrease-master-window-count

# super + shift + j: move window down
cmd + ctrl + alt + shift - j : /opt/homebrew/bin/yabai -m window --swap next || /opt/homebrew/bin/yabai -m window --swap first

# super + shift + k: move window up
cmd + ctrl + alt + shift - k : /opt/homebrew/bin/yabai -m window --swap prev || /opt/homebrew/bin/yabai -m window --swap last

# super + h: resize window left
cmd + ctrl + alt - h : /opt/homebrew/bin/yabai -m window --resize right:-50:0; /opt/homebrew/bin/yabai -m window --resize left:-50:0

# super + l: resize window right
cmd + ctrl + alt - l : /opt/homebrew/bin/yabai -m window --resize right:50:0; /opt/homebrew/bin/yabai -m window --resize left:50:0

# super + shift + k: resize window top
cmd + ctrl + alt + shift - l : /opt/homebrew/bin/yabai -m window --resize top:0:-50; /opt/homebrew/bin/yabai -m window --resize bottom:0:-50

# super + shift + h: resize window bottom
cmd + ctrl + alt + shift - h : /opt/homebrew/bin/yabai -m window --resize bottom:0:50; /opt/homebrew/bin/yabai -m window --resize top:0:50

# super + f: toggle window fullscreen
cmd + ctrl + alt - f11 : /opt/homebrew/bin/yabai -m window --toggle native-fullscreen

# super + x: close focused window
cmd + ctrl + alt - x : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp close-focused-window

# super + ]: focus next display
cmd + ctrl + alt - 0x1E : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-next-display

# super + shift + ]: move window to next display
cmd + ctrl + alt + shift - 0x1E : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp move-window-to-next-display

# super + [: focus previous display
cmd + ctrl + alt - 0x21 : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-previous-display

# super + shift + [: move window to previous display
cmd + ctrl + alt + shift - 0x21 : /Users/leonsilicon/.bun/bin/bun /Users/leonsilicon/.bun/bin/ymsp move-window-to-previous-display

# super + hyphen: minimize window
cmd + ctrl + alt + shift - 0x1B : /opt/homebrew/bin/yabai -m window --minimize

# super + w: open Warp Terminal
cmd + ctrl + alt - w : open -a /Applications/Warp.app

# super + shift + w: open Warp Terminal in a new window
cmd + ctrl + alt + shift - w : open -na /Applications/Warp.app

# super + b: open Browser (Chrome Beta)
cmd + ctrl + alt - b : open /Applications/Google\ Chrome\ Beta.app

# super + t: Toggl Track scratchpad
cmd + ctrl + alt - t : yabai -m window --toggle toggltrack || open -a 'Toggl Track'

cmd + ctrl + alt - f1 : /Users/leonsilicon/.config/just/commands/super-f1.ts
